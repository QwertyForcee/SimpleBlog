@model CommentViewModel

@{
}

<div>
    <form method="post" asp-controller="Home" asp-action="Comment">
        <input asp-for="PostId" type="hidden" />
        <input asp-for="MainCommentId" type="hidden" />
        <input asp-for="Message" />
        <input asp-for="Author" type="hidden"/>
        @if (Model.MainCommentId == 0)
        {
            <button type="submit" class="btn btn-outline-primary" style="background-color:white">Submit</button>
        }
        else
        {
             <button type="submit" class="btn btn-outline-primary" style="background-color:white">Reply</button>
        }
    </form>
</div>